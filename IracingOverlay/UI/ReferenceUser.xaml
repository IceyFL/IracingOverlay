<UserControl x:Class="IracingOverlay.UI.ReferenceUser"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignWidth="490"
             Background="#00ffffff"
             Margin="10,0,10,0"
             Padding="0,5,0,0"
             Height="31">
    <Border Background="#33FFFFFF" BorderBrush="#50FFFFFF" BorderThickness="0" CornerRadius="5" Margin="0,0,0,0">
    <Grid>
        <Label x:Name="Position"
               Foreground="White"
               Content="P1"
               VerticalContentAlignment="Center"
               Padding="1,0,1,0"
               FontSize="14"
               Margin="7,0,432,0"
               FontWeight="Bold"/>
        <Label x:Name="Name"
               Foreground="White"
               Content="John Doe"
               VerticalContentAlignment="Center"
               Padding="1,0,1,0"
               FontSize="14"
               Margin="63,0,204,0"
               FontWeight="Bold"/>
        <Border Name="LicenseLevel"
                Width="35"
                Height="20"
                CornerRadius="5"
                Background="Blue"
                VerticalAlignment="Center"
                HorizontalAlignment="Left"
                Margin="297,0,0,0">
            <Label Name="SafetyRating"
                       Content="4.9"
                       Foreground="Gray"
                       FontSize="14"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       Padding="0,0,0,0"
                       HorizontalAlignment="Center"/>
        </Border>

        <Border Width="50"
                Height="20"
                CornerRadius="5"
                Background="#aaaaaaaa"
                VerticalAlignment="Center"
                HorizontalAlignment="Left"
                Margin="343,0,0,0">
            <Label Name="IratingK"
                       Content="10.9k"
                       Foreground="White"
                       FontSize="14"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       Padding="0,0,0,0"
                       HorizontalAlignment="Center"/>
        </Border>
        <Label x:Name="DeltaS"
               Foreground="White"
               Content="100.9s"
               VerticalContentAlignment="Center"
               Padding="1,0,0,0"
               FontSize="14"
               Margin="397,0,20,0"
               FontWeight="Bold"/>
    </Grid>
    </Border>
</UserControl>